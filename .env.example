# NVIDIA API Configuration
NVIDIA_API_KEY=your_nvidia_api_key_here
NVIDIA_NIM_ENDPOINT=https://api.nvidia.com/nim
NVIDIA_LLM_ENDPOINT=https://api.nvidia.com/llm

# Nemotron Configuration (for synthetic data generation)
NEMOTRON_MODEL=nemotron-4-340b-instruct
NEMOTRON_ENDPOINT=https://api.nvidia.com/nemotron

# Vector Store Configuration
VECTOR_STORE_TYPE=chromadb  # Options: chromadb, milvus, pinecone
VECTOR_STORE_PATH=./data/vector_store
VECTOR_STORE_HOST=localhost
VECTOR_STORE_PORT=19530

# Embedding Model Configuration
EMBEDDING_MODEL=nvidia/nv-embed-v2
EMBEDDING_DIMENSION=1024

# LLM Configuration
LLM_MODEL=meta/llama-3-70b-instruct
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# Ragas Configuration
RAGAS_LLM_ENDPOINT=https://api.nvidia.com/llm
RAGAS_EMBEDDING_ENDPOINT=https://api.nvidia.com/embeddings

# Course Configuration
COURSE_DATA_PATH=./course_materials
DATASETS_PATH=./course_materials/datasets
NOTEBOOKS_PATH=./course_materials/notebooks

# Testing Configuration
HYPOTHESIS_PROFILE=default  # Options: default, dev, ci, thorough
PYTEST_WORKERS=auto

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/course.log

# Development Configuration
DEBUG=False
ENVIRONMENT=development  # Options: development, staging, production
